			{{> includes/_layout/menu_right }}
		</section>
		<div class="menu-overlay"></div>

		{{!-- game itself --}}
		<section id="canvas-container" class="canvas-container">
			<div class="canvas-overlay"></div>
			{{> includes/_canvas-ui/player-hub }}
			{{> includes/_canvas-ui/powerups-container }}
