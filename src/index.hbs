		<div class="brand"><img src="./img/brand_hd.png"></div>
		<section id="menu" class="menu">
			{{> includes/_layout/menu_left }}
			<div class="menu-center">
				{{!-- kards include --}}
				{{> includes/_kards/new-user }}
